<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form_with_preview" model="ir.ui.view">
            <field name="name">sale.order.form.file.preview</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position='after'>
                   <field name="pdf_filename" invisible="1" readonly="1" force_save="1"/>
                  <field name="pdf_file" filename="pdf_filename"/>
                </xpath>
            </field>
          </record>
    </data>
</odoo>